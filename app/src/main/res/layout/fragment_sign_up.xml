<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed_sign_name"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_userid"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_userid" />

    <EditText
        android:id="@+id/ed_sign_userid"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_pwd"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_pwd" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_sign_send"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="152dp"
        android:alpha="0.75"
        android:background="@drawable/msg_back"
        android:text="@string/send"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_name"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_name" />

    <TextView
        android:id="@+id/tv_sign_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userid"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_userid"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_userid" />

    <TextView
        android:id="@+id/tv_sign_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_pwd"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_pwd" />

    <EditText
        android:id="@+id/ed_sign_pwd_again"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/bt_sign_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sign_pwd_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_enter_password_again"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_pwd_again"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_pwd_again" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_back_to_login"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/titlebarback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_sign_pwd"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_pwd_again"
        app:layout_constraintEnd_toEndOf="@+id/ed_sign_pwd_again"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_pwd_again" />
</androidx.constraintlayout.widget.ConstraintLayout>