<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_member_info"
        tools:srcCompat="@drawable/picpersonal" />

    <TextView
        android:id="@+id/tv_person_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4A4A4A"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/name"
        android:textColor="#4A4A4A"
        app:layout_constraintBottom_toBottomOf="@+id/tv_person_show_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_person_show_name"
        app:layout_constraintTop_toTopOf="@+id/tv_person_show_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_person_show_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/userid"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4A4A4A"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_person_show_name" />

    <TextView
        android:id="@+id/tv_person_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/userid"
        android:textColor="#4A4A4A"
        app:layout_constraintBottom_toBottomOf="@+id/tv_person_show_userid"
        app:layout_constraintEnd_toStartOf="@+id/tv_person_show_userid"
        app:layout_constraintTop_toTopOf="@+id/tv_person_show_userid"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_member_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/member_information"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4A4A4A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_logout"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:alpha="0.75"
        android:background="@drawable/msg_back"
        android:text="@string/log_out"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_person_show_userid" />
</androidx.constraintlayout.widget.ConstraintLayout>